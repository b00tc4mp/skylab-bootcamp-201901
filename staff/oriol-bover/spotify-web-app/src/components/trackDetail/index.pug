extends ../home/index

block trackDetail
          section
            .columns.is-multiline.is-mobile.is-centered
                .column.is-three-quarters-mobile.is-three-quarters-tablet.is-three-quarters-desktop.has-text-centered
                    .track--detail
                        img(src=`${track.album.images.length > 0 ? `${track.album.images[0].url}`: 'https://media.idownloadblog.com/wp-content/uploads/2016/10/latest.jpg'}`, alt=`${track.name}`, class="track--image")
                        h2.title= track.name
                        h4.subtitle= track.artists[0].name
                        a.button(href=`${track.external_urls.spotify}`, target="_blank", class="track--button")
                            i.fab.fa-spotify
                            |  Spotify Page
                        br
                        if track.preview_url
                        audio(controls='')
                            source(src=`${track.preview_url}`, type='audio/mpeg')