extends ../layout

include ../feedback/index

block content
      section(class='welcome')
        section(class='login__margins')
          div(class='login container pl-lg-5 pr-lg-5')
            h2(class='center-text mt-3') Register
            form(method='POST', action='/register', class='login__form form-group container mb-3 ')
              div(class='row')
                label(htmlfor='name', class='col col-md-3 col-sm-12 flex mt-1') Name
                input(type='text', class='col col-md-9 col-12 form-control mt-1', name='name', placeholder='Name', required='')
                label(htmlfor='surname', class='col col-md-3 col-sm-12 flex mt-1') Surname
                input(type='text', class='col col-md-9 col-12 form-control mt-1', name='surname', placeholder='Surname', required='')
                label(htmlfor='email', class='col col-md-3 col-sm-12 flex mt-1') Email
                input(type='email', class='col col-md-9 col-12 form-control mt-1', name='email', placeholder='Email', required='')
                label(htmlfor='password', class='col col-md-3 col-sm-12 flex mt-1') Password
                input(type='password', class='col col-md-9 col-12 form-control mt-1', name='password', placeholder='Password', required='')
                label(htmlfor='password', class='col col-md-3 col-sm-12 flex mt-1') Confirm Password
                input(type='password', class='col col-md-9 col-12 form-control mt-1', name='passwordConfirm', placeholder='Confirm Password', required='')
                if feedback
                  +feedback(feedback, 'error')
              div(class='row login-flex mt-3')
                div(class='col-md-3 col-0')
                button(type='submit', class='btn btn-dark col-12 col-sm-6 mr-2') Register
                div(class='pt-2 pt-sm-0')
                  a(href='/login', class='btn btn-outline-secondary') Login
